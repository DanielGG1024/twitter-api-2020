<h1>Private Chat room</h1>
登入者ID:  {{userId}}
聊天室ID: {{roomId}}
<div id="container">
  <div id="left">
    <div id="user">
      <div class="img-wrapper">
        <img src="" alt="">
      </div>
      <div class="user-name">dum</div>
    </div>

  </div>
  <div id="right">
    <div id="status-box">Server: <span id="status">-</span> / <span id="online">0</span> online.</div>
    <div id="content">
    </div>

    <div id="send-box">
      <form id="send-form">
        <input type="text" name="msg" id="msg" placeholder="說點什麼？">
        <input type="submit" value="送出">
      </form>
    </div>
  </div>
  <a href="/login" id="quit"><button>quit</button></a>

</div>


<script src="/socket.io/socket.io.js"></script>
<script>

  const socket = io.connect('http://localhost:3000')
  console.log(socket.auth)
  document.addEventListener("DOMContentLoaded", () => {

    const status = document.getElementById("status")
    const online = document.getElementById("online")
    const content = document.getElementById("content")
    const sendForm = document.getElementById("send-form")
    const msg = document.getElementById("msg")
    const left = document.getElementById("left")
    const quit = document.getElementById("quit")

    socket.on("connect", function () {
      status.innerText = "Connected.";
      socket.emit("joinPrivate", [2, 4])
    })

    socket.on("newMessage", function (data) {
      console.log('---newMessage for private---')
      console.log(data)
    })
    socket.on("announce", function (info) {
      console.log('---announce---')
      console.log(info)
      const joinAndout = document.createElement("div")
      joinAndout.className = "joinAndout"
      const usermsg = document.createTextNode(info.message)
      joinAndout.appendChild(usermsg)
      content.appendChild(joinAndout)

    })
    quit.addEventListener('click', (e) => {
      socket.emit("leavePrivate", { roomId: {{ roomId }}, userId: {{ userId }} })
    })

    sendForm.addEventListener("submit", function (e) {
      e.preventDefault();
      const formData = { roomId: {{ roomId }}, UserId: {{ userId }}, msg: msg.value };
      socket.emit("chatmessage", formData);
    })

  })
</script>
